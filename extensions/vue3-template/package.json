{
  "$schema": "./@types/schema/package/index.json",
  "package_version": 2,
  "name": "vue3-template",
  "version": "1.0.0",
  "type": "module",
  "author": "Cocos Creator",
  "editor": ">=3.8.3",
  "license": "MIT",
  "engines": {
    "node": ">=22.8.0",
    "yarn": "1.x"
  },
  "scripts": {
    "preinstall": "node ./scripts/dist/preinstall.cjs",
    "build": "vue-tsc && vite build --mode development",
    "build:watch": "concurrently \"yarn vue-tsc --watch\" \"yarn vite build --watch --mode development\"",
    "build:scripts": "yarn --cwd ./scripts build",
    "build:production": "vue-tsc && vite build --mode production",
    "build:production-free": "vue-tsc && vite build --mode production -- --prod free",
    "packaging": "yarn build:production && yarn build:scripts && node ./scripts/dist/packaging.cjs",
    "packaging:free": "yarn build:production-free && yarn build:scripts && node ./scripts/dist/packaging.cjs --prod free"
  },
  "description": "i18n:vue3-template.description",
  "main": "./dist/main.js",
  "dependencies": {
    "fs-extra": "^10.0.0",
    "path": "^0.12.7",
    "vue": "^3.1.4"
  },
  "devDependencies": {
    "@cocos/creator-types": "^3.8.3",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/archiver": "^6.0.2",
    "@types/fs-extra": "^9.0.5",
    "@types/node": "^22.5.5",
    "@vitejs/plugin-vue": "^5.1.2",
    "archiver": "^7.0.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.24.0",
    "javascript-obfuscator": "^4.1.1",
    "terser": "^5.36.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vue-tsc": "^2.0.29"
  },
  "panels": {
    "default": {
      "title": "i18n:vue3-template.panel_default_title",
      "type": "dockable",
      "main": "dist/panels/defaultPanel",
      "icon": "dist/icon.svg",
      "size": {
        "min-width": 400,
        "min-height": 300,
        "width": 1024,
        "height": 600
      }
    },
    "about": {
      "title": "i18n:vue3-template.panel_about_title",
      "type": "simple",
      "main": "dist/panels/aboutPanel",
      "size": {
        "min-width": 400,
        "min-height": 300,
        "width": 400,
        "height": 300
      }
    }
  },
  "contributions": {
    "menu": [
      {
        "path": "i18n:vue3-template.editor_menu",
        "label": "i18n:vue3-template.open_panel",
        "message": "open-panel"
      },
      {
        "path": "i18n:vue3-template.editor_menu",
        "label": "i18n:vue3-template.open_about",
        "message": "open-about"
      },
      {
        "path": "i18n:menu.develop/vue3-template",
        "label": "i18n:vue3-template.send_to_panel",
        "message": "send-to-panel"
      }
    ],
    "messages": {
      "open-panel": {
        "methods": [
          "openPanel"
        ]
      },
      "open-about": {
        "methods": [
          "openAbout"
        ]
      },
      "send-to-panel": {
        "methods": [
          "default.hello"
        ]
      }
    },
    "shortcuts": [
      {
        "message": "open-panel",
        "win": "ctrl+o",
        "mac": "cmd+o"
      }
    ],
    "assets": {
      "menu": {
        "methods": "dist/contributions/assets/menu.js",
        "createMenu": "onCreateMenu",
        "assetMenu": "onAssetMenu",
        "dbMenu": "onDBMenu",
        "panelMenu": "onPanelMenu"
      }
    }
  }
}
